<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/mainScreen">

    <fragment
        android:id="@+id/mainScreen"
        android:name="com.example.notes.views.fragments.MainScreen"
        android:label="fragment_main_screen"
        tools:layout="@layout/fragment_main_screen" >
        <action
            android:id="@+id/action_mainScreen_to_addNoteScreen3"
            app:destination="@id/addNoteScreen3" />
    </fragment>
    <fragment
        android:id="@+id/addNoteScreen3"
        android:name="com.example.notes.views.fragments.AddNoteScreen"
        android:label="fragment_add_note_screen"
        tools:layout="@layout/fragment_add_note_screen" >
        <action
            android:id="@+id/action_addNoteScreen3_to_mainScreen"
            app:destination="@id/mainScreen" />
    </fragment>
</navigation>